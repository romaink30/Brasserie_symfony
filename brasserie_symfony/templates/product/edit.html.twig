{% extends 'base.html.twig' %}

{% block title %}Modifier le produit{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Modifier le produit</h1>

    <form method="post" action="{{ path('product_edit', {'id': product.id}) }}">
        <div class="mb-3">
            <label style="color:rgb(195, 137, 65);" for="id" class="form-label">ID</label>
            <input type="text" name="id" id="id" class="form-control" value="{{ product.id }}" required>
        </div>

        <div class="mb-3">
            <label style="color:rgb(195, 137, 65);" for="name" class="form-label">Nom</label>
            <input type="text" name="name" id="name" class="form-control" value="{{ product.name }}" required>
        </div>

        <div class="mb-3">
            <label style="color:rgb(195, 137, 65);" for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control">{{ product.description }}</textarea>
        </div>

        <div class="mb-3">
            <label style="color:rgb(195, 137, 65);" for="price" class="form-label">Prix</label>
            <input type="number" step="0.01" name="price" id="price" class="form-control" value="{{ product.price }}" required>
        </div>

        <div class="mb-3">
            <label style="color:rgb(195, 137, 65);" for="stock" class="form-label">Stock</label>
            <input type="number" name="stock" id="stock" class="form-control" value="{{ product.stock }}" required min="0">
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('product_index') }}" class="btn btn-secondary">Annuler</a>
    </form>
</div>
{% endblock %}
