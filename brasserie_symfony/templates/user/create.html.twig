{% extends 'base.html.twig' %}

{% block title %}Créer un utilisateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Créer un utilisateur</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {% if errorMessage is defined %}
        <div class="alert alert-danger">{{ errorMessage }}</div>
    {% endif %}

    <form method="post" action="{{ path('user_create') }}" class="border p-4 rounded bg-light">
        <div class="mb-3">
            <label for="email" style="color:rgb(195, 137, 65);" class="form-label">Adresse email</label>
            <input type="email" id="email" name="email" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="password" style="color:rgb(195, 137, 65);" class="form-label">Mot de passe</label>
            <input type="password" id="password" name="password" class="form-control" required minlength="6">
        </div>

        <div class="mb-3">
            <label for="role" style="color:rgb(195, 137, 65);" class="form-label">Rôle</label>
            <select name="role" id="role" class="form-select">
                <option value="user" selected>Utilisateur</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Créer</button>
        <a href="{{ path('user_index') }}" class="btn btn-secondary">Annuler</a>
    </form>

    <div class="mt-3 text-danger">
        <strong>Attention :</strong> On ne peut pas donner le rôle administrateur via ce formulaire, cela doit être fait directement dans la base de données.
    </div>
</div>
{% endblock %}
