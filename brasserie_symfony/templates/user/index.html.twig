{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Liste des utilisateurs</h1>
    
    <a href="{{ path('user_create') }}" class="btn btn-success mb-3">Ajouter un utilisateur</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Rôle</th>
                <th>État</th>
                <th>Date d'inscription</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <span class="badge bg-primary">
                            {% if user.raw_app_meta_data.role is defined and user.raw_app_meta_data.role == 'admin' %}
                                Administrateur
                            {% else %}
                                Utilisateur
                            {% endif %}
                        </span>
                    </td>
                    <td>
                        {% if user.email_confirmed_at is null %}
                            <span class="badge bg-warning text-dark">En attente de validation</span>
                        {% else %}
                            <span class="badge bg-success">Confirmé</span>
                        {% endif %}
                    </td>
                    <td>{{ user.created_at | date('Y-m-d') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Aucun utilisateur trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
